---
import Button from "./Button.astro";
---

<div class="header">
	<a href="/">
		<img
			class="logo"
			src="/assets/logos/big_logo.png"
			alt="Opire logo"
		/>
	</a>

	<nav class="nav">
		<ul class="nav-list">
			<li class="nav-item"><a href="/for-devs">FOR DEVS</a></li>
			<li class="nav-item">
				<a href="/for-code-owners">FOR CODE OWNERS</a>
			</li>
			<li class="nav-item">
				<a href="/for-reward-creators">FOR REWARD CREATORS</a>
			</li>
		</ul>
		<Button type="primary" href="https://app.opire.dev">GO TO APP</Button>
	</nav>
</div>

<style>
	.header {
		padding: 30px 60px;
		display: flex;
		flex: 1 auto;
		justify-content: space-between;
		align-items: center;
	}
	.logo {
		width: 150px;
	}
	.icon {
		cursor: pointer;
		transform: scale(1.5);
	}
	.nav {
		display: flex;
		align-items: center;
		gap: 40px;
	}
	.nav-list {
		margin: 0;
		padding: 0;
		list-style: none;
		display: flex;
		gap: 40px;
	}
	.nav-item {
		position: relative;
		display: inline-block;
		text-decoration: none;
	}
	.nav-item::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 0;
		width: 100%;
		height: 0.05em;
		background-color: #FFFFFF;
		opacity: 0;
		transition: opacity 300ms, transform 300ms;
		opacity 1;
		transform: scale(0);
		transform-origin: center;
	}
	.nav-item:hover::after {
		opacity: 1;
			transform: translate3d(0, 0.2em, 0);
			transform: scale(1);
	}
	a {
		text-decoration: none;
		color: #ffffff;
	}
</style>
