---
interface Props {
    type: "primary" | "secondary";
    href: string;
}

const { type, href } = Astro.props;
---

<a class={`button button--${type}`} href={href}>
    <slot />
</a>

<style>
    .button {
        padding: 14px 32px;
        border-radius: 5px;
        transition: all 0.2s;
        text-align: center;
    }
    .button:hover {
        border-radius: 8px;
    }
    .button--primary {
        background-color: #f2f2f2;
        color: #121212;
    }
    .button--primary:hover {
        background-color: #ffffff;
    }
    .button--secondary {
        border: 1px solid #ffffff;
        background-color: #121212;
        color: #ffffff;
    }
    .button--secondary:hover {
        background-color: #181818;
    }
    a {
        text-decoration: none;
        color: #ffffff;
    }
</style>
